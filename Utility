Option Explicit

Private Sub CommandButton1_Click()
    Dim answer As VbMsgBoxResult
    Let answer = MsgBox("Did you refreshed txt file from AXapta?", vbYesNo + vbQuestion, "Confirm update")
    
    If answer = vbYes Then
        ThisWorkbook.RefreshAll
    Else
        Exit Sub
    End If
End Sub

Private Sub CommandButton2_Click()
    Call GenerateBacklogXLSFiles
End Sub

Private Sub CommandButton3_Click()
    Call GenerateMassBacklogXLSFiles
End Sub

Private Sub CommandButton4_Click()
    Call GenerateMassMailAndXLSFiles
End Sub


Private Sub Worksheet_Activate()

Dim pt As PivotTable
Set pt = Sheet3.PivotTables(1)

pt.PivotCache.Refresh

End Sub
